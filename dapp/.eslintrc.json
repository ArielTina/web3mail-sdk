{
  "root": true,
  "plugins": ["import", "sonarjs"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": ["airbnb-base", "prettier", "plugin:sonarjs/recommended"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "sonarjs/cognitive-complexity": "warn"
  },
  "env": {
    "jest": true
  },
  "overrides": [
    {
      "files": ["./tests/**/*.ts"],
      "rules": {
        "sonarjs/no-duplicate-string": "off"
      }
    }
  ]
}
