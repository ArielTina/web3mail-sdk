{
  "compilerOptions": {
    "module": "es2015",
    "target": "es6",
    "declaration": true,
    "outDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
